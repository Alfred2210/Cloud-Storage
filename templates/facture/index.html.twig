{% block title %}{% endblock %}

{% block body %}
    <div class="container mx-auto p-8">
        <div class="bg-white rounded-lg shadow-md p-8">
            <h1 class="text-2xl font-semibold mb-4">Facture</h1>

            <div class="mb-6">
                <p>Date : {{ date }}</p>
                <p><strong>De :</strong></p>
                <p>Cloud Storage</p>
                <p>3 Rue de la Liberté</p>
                <p>Paris, 75000</p>
                <p>01 23 45 67 89</p>
            </div>

            <div class="mb-6">
                <p><strong>À :</strong></p>
                <p>{{ name }}</p>
                <p>{{ shippingAddress }}</p>
                <p>{{ city }}, {{ zipCode }}</p>
                <p>{{ phoneNumber }}</p>
            </div>

            <table class="w-full mb-6">
                <thead>
                <tr>
                    <th class="py-2">Produit : </th>
                </tr>
                </thead>
                <tbody>
                <!-- Exemple de ligne de produit -->

                <!-- Ajoutez d'autres lignes de produit si nécessaire -->
                </tbody>
            </table>

            <div class="flex justify-end">
                <div class="w-1/3">
                    <table class="w-full">
                        <tr>
                            <td class="border-b py-2">Stockage : </td>
                            <td class="border-b py-2">{{ price }}€</td>
                        </tr>
                        <tr>
                            <td class="border-b py-2">Quantité : </td>
                            <td class="border-b py-2">1</td>
                        </tr>
                        <tr>
                            <td class="py-2">Prix:</td>
                            <td class="py-2 text-right">{{ price }}€</td>
                        </tr>
                        <tr>
                            <td class="py-2">Taxe (TVA 20%):</td>
                            <td class="py-2 text-right">{{ tva }}€</td>
                        </tr>
                        <tr>
                            <td class="py-2 font-semibold">Total:</td>
                            <td class="py-2 text-right font-semibold">{{ ttc }}€</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
