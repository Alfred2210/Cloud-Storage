{% extends 'base.html.twig' %}


{% block title %}Dashboard
{% endblock %}

{% block body %}
    <style>
        .sidebar {
            width: 250px;
            background-color: #33698F;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            z-index: 100;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: width 0.3s ease;
        }

        .navbar-collapse {
            display: flex;
            flex-direction: row;
        }

        .navbar-nav {
            margin-left: 0;
        }

        .nav-item {
            width: 100%;
        }

        .nav-link {
            color: white;
        }

        .nav-link:hover {
            color: white;
        }

        .file-upload-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .file-input {
            display: none;
        }

        .custom-file-label {
            background-color: #337AB7;
            color: #FFFFFF;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .upload-button {
            background-color: #5CB85C;
            color: #FFFFFF;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="sidebar navbar-vertical">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav nav-pills ">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_files') }}">Files</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_plan')}}">Pricing</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="file-upload-container">
        <form method="POST" action="{{ path('app_files_upload') }}" enctype="multipart/form-data">
            <input type="file" id="file" name="file" class="file-input" />
            <label for="file" class="custom-file-label">+</label>
            <button type="submit" class="upload-button">+</button>
        </form>
    </div>

{% endblock %}

