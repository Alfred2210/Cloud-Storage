{% extends 'base.html.twig' %}

{% block title %}Upload file{% endblock %}

{% block body %}



	<style>

            .sidebar {
            width: 250px;
            background-color: #33698F;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            z-index: 100;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: width 0.3s ease;
            font-family: 'Suwannaphum';
        }

        .navbar-collapse {
            display: flex;
            flex-direction: row;
        }

        .navbar-nav {
            margin-left: 0;
        }

        .nav-item {
            width: 100%;
        }

        .nav-link {
            color: white;
        }

        .nav-link:hover {
            color: white;
        }



		.file-card {
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
			padding: 20px;
			margin-bottom: 20px;
			max-width: 230px;
		}

		.file-card h6 {
			margin-bottom: 10px;
		}

		.file-card p {
			color: #888;
			margin-bottom: 0;
		}

	</style>



     <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="sidebar navbar-vertical">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav nav-pills ">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_files') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_plan')}}">Upgrade</a>
                    </li>
					{% if is_granted('ROLE_SUPER_ADMIN') %}
					<li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
					{% endif %}
					<li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-3">
				<div class="card">
					<div class="card-body">
						<h5 class="mb-0 text-primary font-weight-bold">45.5 GB
							<span class="float-end text-secondary">50 GB</span>
						</h5>
						<p class="mb-0 mt-2">
							<span class="text-secondary">Used</span>
							<span class="float-end text-primary">Upgrade</span>
						</p>
						<div class="progress mt-3" style="height:7px;">
							<div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
							<div class="progress-bar bg-warning" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
							<div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
						<div class="mt-3"></div>
						<div class="d-flex align-items-center">
							<div class="me-2">
								<div class="progress-circle progress-lg" data-color="primary" data-percent="75" data-width="6" data-font-size="18" data-progress="circle"></div>
							</div>
							<div>
								<h6 class="mb-0">Photos</h6>
								<small class="text-secondary">18 GB</small>
							</div>
						</div>
						<div class="mt-3"></div>
						<div class="d-flex align-items-center">
							<div class="me-2">
								<div class="progress-circle progress-lg" data-color="warning" data-percent="50" data-width="6" data-font-size="18" data-progress="circle"></div>
							</div>
							<div>
								<h6 class="mb-0">Videos</h6>
								<small class="text-secondary">10 GB</small>
							</div>
						</div>
					</div>
				</div>
	<div class="w-full bg-blue-900 py-2 px-4">
		<nav class="flex space-x-4">
			<a href="{{ path('app_files') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Dashboard</a>
			<a href="{{ path('app_plan') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Upgrade</a>
		</nav>
	</div>
	<div class="py-10 px-8">
		<div class="flex flex-col items-center mb-6">
			<h5 class="text-2xl font-semibold mb-2">All Files</h5>
			<div class="flex justify-center space-x-2">
				<a href="{{ path('app_files', { 'sort': 'date', 'order': 'desc' }) }}" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500{% if sort == 'date' %} bg-blue-100{% endif %}">
					Date
				</a>
				<a href="{{ path('app_files', { 'sort': 'name', 'order': 'asc' }) }}" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500{% if sort == 'name' %} bg-blue-100{% endif %}">
					Nom
				</a>
				<a href="{{ path('app_files', { 'sort': 'recent', 'order': 'desc' }) }}" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500{% if sort == 'recent' %} bg-blue-100{% endif %}">
					Récents
				</a>
				<a href="{{ path('app_files', { 'sort': 'size', 'order': 'desc' }) }}" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500{% if sort == 'size' %} bg-blue-100{% endif %}">
					Taille
				</a>
			</div>


		</div>
		<div class="flex justify-end space-x-2">
			<form action="{{ path('app_files_upload') }}" method="post" enctype="multipart/form-data" class="flex items-center">
				<label for="file-upload" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer">
					Select File
				</label>
				<input type="file" name="file" id="file-upload" class="hidden" required>
				<button type="submit" class="inline-flex items-center justify-center px-4 py-2 ml-3 text-sm font-medium text-blue-700 bg-white border border-blue-300 rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
					Upload
				</button>
			</form>
		</div>
	</div>



	<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
		{% for file in files %}
			<div class="max-w-sm rounded overflow-hidden shadow-lg">
				<div class="px-6 py-4">
					<div class="font-bold text-xl mb-2">{{ file.nom }}</div>
				</div>
				<div class="px-6 pt-4 pb-2">
					{% if file.type == 'application/pdf' %}
						<a href="{{ asset('uploads/' ~ file.nom) }}" target="_blank" class="inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold text-blue-700 mr-2 mb-2">Aperçu PDF</a>
					{% else %}
						<a href="{{ path('app_files_view', {'id': file.id}) }}" class="inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold text-blue-700 mr-2 mb-2">Voir</a>
					{% endif %}
					<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{ file.type|split('/')[1]|upper }}</span>
					<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{ file.date|date('d/m/Y') }}</span>
					{% set sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'] %}
					{% set factor = (file.taille|length - 1) // 3 %}
					<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Taille : {{ (file.taille / 1024 ** factor)|round(2) }} {{ sizes[factor] }}</span>

					<!-- Bouton de suppression -->
					<form action="{{ path('app_files_delete', {'id': file.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce fichier ?');">
						<button type="submit" class="inline-block bg-red-200 rounded-full px-3 py-1 text-sm font-semibold text-red-700 mr-2 mb-2">Supprimer</button>
					</form>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="fixed bottom-4 right-4">
		<div class="bg-gray-200 rounded-lg h-6 w-96">
			<div class="bg-blue-500 rounded-lg h-6" style="width: {{ (usedSpace / totalStorage) * 100 }}%;"></div>
		</div>
		<div class="text-center mt-2 text-gray-600">
			{{ (usedSpace / (1024 ** 3))|round(2) }} Go / {{ (totalStorage / (1024 ** 3))|round(2) }} Go
		</div>
	</div>







	</div>
{% endblock %}