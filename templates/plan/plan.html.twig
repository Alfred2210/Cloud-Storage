{% extends 'base.html.twig' %}

{% block stylesheets %}
    
{% endblock %}

{% block page_class %}
plans
{% endblock %}


{% block body %}
    <section class="text-center">
        <h4 class="fw-bold ">Nos Plans</h4>
    </section>

    <div class="row justify-content-center">
    {% for plan in plans %}
        <div class="col-md-3 mx-auto">
            <div class="card border border-dark">
                <div class="mx-2 card-body">
                    <h5 class="card-title my-2">{{plan.getNom}}</h5>
                    <p class="h2 fw-bold">â‚¬{{plan.getPrix}}<small class="text-muted" style="font-size: 18px;">/EUR</small></p>
                    <form action="{{ path('app_stripe_checkout', { 'planId': plan.id }) }}" method="POST">
                        <input type="hidden" name="planId" value="{{plan.id}}">
                        <input class="btn btn-outline-success" type="submit" value= "Buy {{plan.getNom()}}" >
                    </form>
                </div>
                <div class="card-footer">
                    <p class="text-uppercase fw-bold" style="font-size: 12px;">Inclus</p>
                        {% if plan.getNom=='Basic' %}
                            <ul>
                                <li>20 GO Stockage</li>
                                <li>2 User</li>
                                <li>1 Project</li>
                                <li>1000 Messages</li>
                                <li> Secure Online Transfer </li>
                            </ul>
                        {% elseif plan.getNom=='Standard' %}
                            <ul>
                                <li>50 GO Stockage</li>
                                <li>5 User</li>
                                <li>10 Project</li>
                                <li>5000 Messages</li>
                                <li>Secure Online Transfer</li>
                            </ul>

                        {% elseif plan.getNom=='Premium' %}
                            <ul>
                                <li>100 GO Stockage</li>
                                <li>10 User</li>
                                <li>20 Project</li>
                                <li>Support 24/7</li>
                                <li> Secure Online Transfer </li>
                                <li> Secure Account</li>
                                
                            </ul>
                        {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}
