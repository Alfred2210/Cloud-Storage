{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Statistique : Nombre total de fichiers uploadés -->
            <div class="bg-white rounded-lg p-6 shadow-md">
                <h2 class="text-xl font-semibold mb-4">Nombre total de fichiers uploadés</h2>
                <p class="text-3xl font-bold">{{ totalFiles }}</p>
            </div>

            <!-- Statistique : Nombre de fichiers uploadés aujourd'hui -->
            <div class="bg-white rounded-lg p-6 shadow-md">
                <h2 class="text-xl font-semibold mb-4">Nombre de fichiers uploadés aujourd'hui</h2>
                <p class="text-3xl font-bold">{{ filesToday }}</p>
            </div>

            <!-- Statistique : Répartition du nombre de fichiers par client -->
            <div class="bg-white rounded-lg p-6 shadow-md">
                <h2 class="text-xl font-semibold mb-4">Répartition par client</h2>
               {# <div class="grid grid-cols-3 gap-4">
                    {% for clientId, fileCount in clientsFiles %}
                        <div class="bg-blue-500 text-white p-4 rounded-lg">
                            <p class="text-sm">Client {{ clientId }}</p>
                            <p class="text-2xl font-bold">{{ fileCount }}</p>
                        </div>
                    {% endfor %}
                </div>#}
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
            <!-- Graphique : Répartition des fichiers par type -->
            <div class="bg-white rounded-lg p-6 shadow-md">
                <h2 class="text-xl font-semibold mb-4">Répartition des fichiers par type</h2>
                <canvas id="fileTypeChart" class="h-64"></canvas>
            </div>

            <!-- Graphique : Évolution du nombre de fichiers par mois -->
            <div class="bg-white rounded-lg p-6 shadow-md">
                <h2 class="text-xl font-semibold mb-4">Évolution du nombre de fichiers par mois</h2>
                <canvas id="monthlyFilesChart" class="h-64"></canvas>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Graphique : Répartition des fichiers par type
        const fileTypeChart = document.getElementById('fileTypeChart');
        new Chart(fileTypeChart, {
            type: 'doughnut',
            data: {
                labels: ['PDF', 'Images', 'Documents', 'Autres'],
                datasets: [{
                    data: [40, 30, 20, 10],
                    backgroundColor: ['#3490dc', '#9561e2', '#ffa500', '#e2e8f0']
                }]
            },
            options: {
                responsive: true
            }
        });

        // Graphique : Évolution du nombre de fichiers par mois
        const monthlyFilesChart = document.getElementById('monthlyFilesChart');
        new Chart(monthlyFilesChart, {
            type: 'line',
            data: {
                labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                datasets: [{
                    label: 'Nombre de fichiers',
                    data: [10, 20, 15, 30, 25, 40],
                    borderColor: '#4a5568',
                    backgroundColor: 'transparent'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
