{% extends 'base.html.twig' %}


{% block body %}

<style>

.container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
</style>

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12">
				<h2 class=" text-center">Creez votre compte</h2>

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.prenom, { label: 'Prenom' }) }}
				{{ form_row(registrationForm.nom, { label: 'Nom' }) }}
				{{ form_row(registrationForm.mail) }}
				{{ form_row(registrationForm.plainPassword, { label: 'Mot de Passe' }) }}
				{{ form_row(registrationForm.agreeTerms, { label: 'Accepter' }) }}
				<button type="submit" class="btn btn-info">S'inscrire</button>
				<p class="mt-3">Vous avez deja un compte ?
					<a href="{{ path('app_login') }}">Connectez-vous</a>
				</p>
				{{ form_end(registrationForm) }}
      </div>
    </div>
  </div>
{% endblock %}
