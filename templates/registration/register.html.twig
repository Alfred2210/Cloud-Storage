    <button type="submit" class="btn btn-success">{{ 'S\'inscrire'|trans }}</button>
    {{ form_end(registrationForm) }}



    <p class="text-center text-muted mt-5 mb-0">Vous avez un compte ? <a href="{{ path('app_register') }}"
            class="fw-bold text-body"><u>Se connecter</u></a></p>
{% endblock %}

               




