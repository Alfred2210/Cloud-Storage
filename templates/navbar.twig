{% extends 'base.html.twig' %}

{% block title %}Upload file{% endblock %}

{% block body %}
    <div class="w-full bg-blue-900 py-3 px-4 flex items-center justify-between">
        <div class="flex items-center space-x-4 mx-auto">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_files') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Admin</a>
        {% endif %}
            <a href="{{ path('app_files') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Dashboard</a>
            <a href="{{ path('app_plan') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Upgrade</a>
            <a href="{{ path('app_statistics') }}" class="text-white hover:text-blue-400 transition-colors duration-300">Statistics</a>

        </div>

        <div class="relative group">
            <button id="profile-button" class="block h-10 w-10 rounded-full overflow-hidden focus:outline-none border-2 border-white">
                <img src="https://cdn.icon-icons.com/icons2/1769/PNG/512/4092564-about-mobile-ui-profile-ui-user-website_114033.png" alt="avatar">
            </button>
            <div id="dropdown-menu" class="hidden absolute right-0 mt-2 w-48 bg-gray-300 rounded-lg shadow-lg group-hover:block">
                <a href="{{ path('app_profile') }}" class="block px-4 py-2 text-gray-800 hover:bg-indigo-500 hover:text-white">Mon Profile</a>
                <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-gray-800 hover:bg-indigo-500 hover:text-white">Logout</a>
            </div>
        </div>
    </div>

    <script>
        const profileButton = document.getElementById("profile-button");
        const dropdownMenu = document.getElementById("dropdown-menu");

        profileButton.addEventListener("click", function() {
            dropdownMenu.classList.toggle("hidden");
        });
    </script>

{% endblock %}

